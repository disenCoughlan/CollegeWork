<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="vendingMachine.Controllers.StockController"
            prefHeight="400.0" prefWidth="600.0"
            stylesheets="/vendingMachine/StyleSheets/App.css">
    <GridPane AnchorPane.topAnchor="0"
              translateY="0"
              prefHeight="400"
              prefWidth="400">
        <Label GridPane.rowIndex="0" GridPane.columnIndex="0" text="Product location"/>
        <TextField GridPane.rowIndex="0" GridPane.columnIndex="1" fx:id="productLocationField" />
        <Label GridPane.rowIndex="1" GridPane.columnIndex="0" text="Product Name"/>
        <TextField GridPane.rowIndex="1" GridPane.columnIndex="1" fx:id="productNameField" />
        <Label GridPane.rowIndex="2" GridPane.columnIndex="0" text="Product Price"/>
        <TextField GridPane.rowIndex="2" GridPane.columnIndex="1" fx:id="productPriceField" />
        <Button GridPane.rowIndex="3" onAction="#addProduct" text="Add Product"/>
    </GridPane>
    <GridPane AnchorPane.topAnchor="2"
              translateY="125">
        <Label GridPane.rowIndex="1" fx:id="validationErrorLabel"/>
        <Label GridPane.rowIndex="2" fx:id="SuccessNotification"/>
        <!--<Label GridPane.rowIndex="0"GridPane.columnIndex="0" text="Balance of machine is " fx:id="balanceOfMachine"/>-->
    </GridPane>
    <GridPane AnchorPane.bottomAnchor="3">
        <Button GridPane.rowIndex="1" onAction="#openVendingMachine" text="Vending Machine"/>
        <!--<Label GridPane.rowIndex="0"GridPane.columnIndex="0" text="Balance of machine is " fx:id="balanceOfMachine"/>-->
    </GridPane>

</AnchorPane>