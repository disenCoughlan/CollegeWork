<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>

<?import javafx.scene.layout.AnchorPane?>
<AnchorPane fx:controller="vendingMachine.Controllers.VendingMachineController"
            xmlns:fx="http://javafx.com/fxml"
            prefWidth="600"
            prefHeight="400"
            >
<GridPane AnchorPane.rightAnchor="3"
          translateY="275"
          prefHeight="25">
        <Label GridPane.rowIndex="0" GridPane.columnIndex="0" text="" fx:id="inputedKey"/>
</GridPane>
    <GridPane AnchorPane.rightAnchor="0"
              translateY="10">
        <Label GridPane.rowIndex="0" GridPane.columnIndex="0" text="0.00E" fx:id="amountInsertedLabel"/>
        <Button GridPane.rowIndex="1" GridPane.columnIndex="0" text="Refund" onAction="#returnMoney"/>
    </GridPane>
    <GridPane AnchorPane.rightAnchor="0"
              translateY="100"
              prefHeight="75">
        <Button GridPane.rowIndex="0" GridPane.columnIndex="0" text="5c" onAction="#selectCoinKey"/>
        <Button GridPane.rowIndex="0" GridPane.columnIndex="1" text="10c" onAction="#selectCoinKey"/>
        <Button GridPane.rowIndex="0" GridPane.columnIndex="2" text="20c" onAction="#selectCoinKey"/>
        <Button GridPane.rowIndex="1" GridPane.columnIndex="0" text="50c" onAction="#selectCoinKey"/>
        <Button GridPane.rowIndex="1" GridPane.columnIndex="1" text="1E" onAction="#selectCoinKey"/>
        <Button GridPane.rowIndex="1" GridPane.columnIndex="2" text="2E" onAction="#selectCoinKey"/>
    </GridPane>
    <GridPane AnchorPane.rightAnchor="1"
              translateY="175"
              prefHeight="100">
        <Button GridPane.rowIndex="0" GridPane.columnIndex="0" text="1" onAction="#selectKey"/>
        <Button GridPane.rowIndex="0" GridPane.columnIndex="1" text="2" onAction="#selectKey"/>
        <Button GridPane.rowIndex="0" GridPane.columnIndex="2" text="3" onAction="#selectKey"/>
        <Button GridPane.rowIndex="1" GridPane.columnIndex="0" text="4" onAction="#selectKey"/>
        <Button GridPane.rowIndex="1" GridPane.columnIndex="1" text="5" onAction="#selectKey"/>
        <Button GridPane.rowIndex="1" GridPane.columnIndex="2" text="6" onAction="#selectKey"/>
        <Button GridPane.rowIndex="2" GridPane.columnIndex="0" text="7" onAction="#selectKey"/>
        <Button GridPane.rowIndex="2" GridPane.columnIndex="1" text="8" onAction="#selectKey"/>
        <Button GridPane.rowIndex="2" GridPane.columnIndex="2" text="9" onAction="#selectKey"/>
        <Button GridPane.rowIndex="3" GridPane.columnIndex="1" text="0" onAction="#selectKey"/>
        <Button GridPane.rowIndex="3" GridPane.columnIndex="0" text="N" onAction="#clearSelection"/>
        <Button GridPane.rowIndex="3" GridPane.columnIndex="2" text="Y" onAction="#acceptSelection"/>
    </GridPane>

    <Label GridPane.rowIndex="4" fx:id="selectionMessage"/>
</AnchorPane>